<div class="col-sm-6 col-lg-4 mb-4">
  <div class="card book-card">
    <div class="card-body">
      <h5 class="card-title">{{ book.title }}</h5>
      <p class="card-text">{{ book.resume }}</p>
      <span class="float-right">{{ book.price }}â‚¬</span>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Auteur : {{ book.author }}</li>
      {% if book.editor %}
        <li class="list-group-item">Editeur : {{ book.editor }}</li>
      {% endif %}
      <li class="list-group-item">Genre : 
        {% for category in book.categories %}
          <span class="badge badge-secondary">{{ category.name }}</span>
        {% endfor %}
      </li>
    </ul>
    <div class="card-body">
      {% if app.user %}
        {% if book in app.user.likes %}
          <a href="{{ path('unlike', {id: book.id}) }}" class="card-link">Unlike</a>
        {% else %}
          <a href="{{ path('like', {id: book.id}) }}" class="card-link">Like</a>
        {% endif %}
      {% endif %}
      <span class="float-right">isbn : {{ book.isbn }}</span>
    </div>
  </div>
</div>